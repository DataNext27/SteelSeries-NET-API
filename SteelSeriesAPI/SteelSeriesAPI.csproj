<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <TargetFrameworks>net8.0;net9.0;net7.0</TargetFrameworks>
        <Version>1.0.0</Version>
        <PackageId>steelseries-net-api</PackageId>
        <Title>SteelSeries .NET API</Title>
        <Authors>DataNext</Authors>
        <Description>Unofficial .NET SteelSeries Sonar API (Since it's acutally impossible for Moments)</Description>
        <PackageProjectUrl>https://github.com/mpaperno/TouchPortal-CS-API</PackageProjectUrl>
        <RepositoryUrl>https://github.com/DataNext27/SteelSeries-NET-API.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <Copyright>Copyright DataNext; all rights reserved</Copyright>
        <PackageLicenseUrl>https://github.com/DataNext27/SteelSeries-NET-API/blob/main/LICENSE</PackageLicenseUrl>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageIcon>icon-24.png</PackageIcon>
        <PackageTags>steelseries; sonar; gg; api; lib; library</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Events\" />
    </ItemGroup>

    <ItemGroup>
      <None Include="icon-24.png">
        <Pack>True</Pack>
        <PackagePath>.</PackagePath>
      </None>
    </ItemGroup>

</Project>
